{
    "languageserver": {
      "purescript": {
           "command": "purescript-language-server",
           "args": ["--stdio"],
           "filetypes": ["purescript"],
           "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"]
        },
        "haskell": {
            "command": "/Users/batman/.local/bin/hie-wrapper",
            "rootPatterns": [".stack.yaml", "cabal.config", "package.yaml"],
            "filetypes": ["hs", "lhs", "haskell"],
            "initializationOptions": {
                "languageServerHasell": {
                    "hlintOn": true
                }
            }
        },
        "reason": {
            "command": "/Users/batman/rls-macos/reason-language-server",
            "filetypes": ["reason", "re"]
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"]
        },
        "ocaml": {
            "command": "ocaml-language-server",
            "args": ["--stdio"],
            "filetypes": ["ocaml", "reason"]
        },
        "elmLS": {
            "command": "elm-language-server",
            "args": ["--stdio"],
            "filetypes": ["elm"],
            "rootPatterns": ["elm.json"],
            "initializationOptions": {
                "runtime": "node",
                "elmPath": "elm",
                "elmFormatPath": "elm-format",
                "elmTestPath": "elm-test"
            }
        }
    },
    "coc.preferences.hoverTarget": "float",
    "coc.preferences.watchmanPath": "/usr/local/bin/watchman",
    "coc.preferences.bracketEnterImprove": true,
    "coc.preferences.formatOnType": true,
    "git.addGBlameToVirtualText": true,
    "git.enableGutters": true,
    "codeLens.enable": true,
    "importCost.typescriptExtensions": [
      "\\.tsx?$",
      ".ts"
    ],
    "importCost.javascriptExtensions": [
      "js",
      "ts", 
      "jsx", 
      "tsx"
    ],
    "importCost.showCalculatingDecoration": true,
    "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "elm",
    "reason",
    "reasonreact",
    "haskell"
    ],
    "tslint.autoFixOnSave": true,
    "eslint.enable": true,
    "eslint.autoFixOnSave": true,
    "prettier.eslintIntegration": true,
    "prettier.requireConfig": true,
    "suggest.triggerAfterInsertEnter": true,
    "suggest.timeout": 500,
    "diagnostic.enable": true,
    "diagnostic.locationlist": true,
    "list.normalMappings": {
        "t": "action:tabe",
        "v": "action:vsplit",
        "s": "action:split",
        "d": "expr:GetDeleteAction"
    },
    "list.insertMappings": {
        "<C-t>": "action:tabe",
        "<C-v>": "action:vsplit",
        "<C-w>": "command:wincmd k"
    },
    "list.maxHeight": 100
}
